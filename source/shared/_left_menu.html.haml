.col-md-3.left_col.navigation
  .left_col.scroll-view
    .navbar.nav_title{ style: 'border: 0;' }
      %a.site_title{ href: '/feed' }
        = image_tag 'home/text-logo.svg', alt: 'Plexa Logo', class: 'site_title__logo'
        = image_tag 'home/logo-mini-dark.svg', alt: 'Plexa Logo', class: 'site_title__logo-min'
    %br
    .main_menu_side.hidden-print.main_menu#sidebar-menu
      .navigation__section
        %h6.navigation__title Plexa network
        %ul.nav.side-menu
          %li{ class: active == 'feed' ? 'active' : '' }
            = link_to '/feed', class: 'slide-menu__link' do
              %i.navigation__icon.navigation__icon--feed
                = image_tag 'app/nav/view-feed.svg', alt: 'feed'
              %span.navigation__item-text
                View Feed
              %span.slide-menu__link-tooltip
                Your medical feed from the private Plexa network. Talk to others on the network securely.

          %li
            %a.slide-menu__link{ href: "#{}" }
              %i.navigation__icon.navigation__icon--feed
                = image_tag 'app/nav/medfundr.svg'
              %span.navigation__item-text Medfundr
              %span.slide-menu__link-tooltip A selection of medical organisations and causes achieving great things. Read about their important research and work. Donate if you wish.

          %li
            %a.slide-menu__link{ href: "#" }
              %i.navigation__icon.navigation__icon--feed
                = image_tag 'app/nav/services.svg', alt: 'feed'
              %span.navigation__item-text Services
              %span.slide-menu__link-tooltip A list of professional services dedicated to Healthcare

      = partial 'shared/provider_menu'

      .navigation__section
        %h6.navigation__title Content
        %ul.nav.side-menu
          %li
            = link_to '#', class: 'magnet-menu-link slide-menu__link' do
              %i.navigation__icon.navigation__icon--social-magnet
                = image_tag 'app/nav/social-magnet.svg', alt: 'social magnet'
              %span.navigation__item-text
                Social Magnet
              %span.slide-menu__link-tooltip
                Add, view and share social media from sources relevant to you.
                Select from our recommended content or add your own.
          %li{ class: active == 'news' ? 'active' : '' }
            = link_to '/news-magnet', class: 'analytics-menu-link slide-menu__link' do
              %i.navigation__icon.navigation__icon--news-magnet
                = image_tag 'app/nav/news-magnet.svg', alt: 'news magnet'
              %span.navigation__item-text
                News Magnet
              %span.slide-menu__link-tooltip
                Add, view and share industry-specific journalism personalised for you.

          %li{ class: active == 'research' ? 'active' : '' }
            = link_to '/research-magnet', class: 'analytics-menu-link slide-menu__link' do
              %i.navigation__icon.navigation__icon--research-magnet
                = image_tag 'app/nav/research-magnet.svg', alt: 'research magnet'
              %span.navigation__item-text
                Research Magnet
              %span.slide-menu__link-tooltip
                Add, view and share industry-specific research journalism personalised for you.

          %li
            = link_to '#', class: 'slide-menu__link' do
              %i.navigation__icon.navigation__icon--search
                = image_tag 'app/nav/sky-search.svg', alt: 'sky search'
              %span.navigation__item-text
                SkySearch
              %span.slide-menu__link-tooltip
                Search more intelligently across news, social and research. Quickly find quality content to share and read.

      .navigation__section.navigation__section--invitation
        .invitation-block
          %h4.invitation-block__title
            Grow your network
          %p.invitation-block__text
            Invite friends to expand your health connections.
          %p.invitation-block__text
            Get 50 credits per user.
          = link_to 'Send invite', '#', class: 'btn btn-green invitation-block__link'
